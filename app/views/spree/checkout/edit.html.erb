<% @body_id = 'checkout' %>

<% if @order.state != 'confirm' %>
  <% content_for :sidebar_right do %>
      <%= render partial: 'spree/shared/mini_order_details', locals: {order: @order} %>
  <% end %>
<% end %>


<div id="checkout" data-hook>
  <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @order } %>
  
  <div id="checkout-header" class="row" data-hook="checkout_header">
    <div class="col-sm-12" data-hook="checkout_progress"><%= checkout_progress %></div>
  </div>

  <div class="row" data-hook="checkout_content">
    <div class="col-sm-12" data-hook="checkout_form_wrapper">
      <%= form_for @order, url: update_checkout_path(@order.state), html: { id: "checkout_form_#{@order.state}" } do |form| %>
        <% unless @order.email? %>
        <div class="panel panel-default">
          <div class="panel-body">
            <p class="field">
              <%= form.label :email %><br />
              <%= form.text_field :email, class: 'form-control' %>
            </p>
          </div>
        </div>
        <% end %>
        <%= render @order.state, form: form %>
      <% end %>
    </div>
  </div>
</div>

<script>
Spree.current_order_id = "<%= @order.number %>"
Spree.current_order_token = "<%= @order.token %>"
</script>

<% if I18n.locale != :en %>
  <script src='/assets/jquery.validate/localization/messages_<%= I18n.locale %>.js'></script>
<% end %>