<%= form_for review, url: product_reviews_path(product), html: {method: :post, class: 'col-sm-6'} do |f| %>
    <%= render 'spree/shared/error_messages', target: review %>

    <div class="form-group review_rating_field">
      <%= f.label :rating %>
      <div class="">
        <%= render 'spree/reviews/stars', stars: review.rating, edit_enabled: true %>
      </div>
    </div>

    <div class="form-group review_name_field">
      <%= f.label :name %>
      <%= f.text_field :name, maxlength:'255', size: '50', class: 'form-control', type: 'text' %>
    </div>

    <div class="form-group review_title_field">
      <%= f.label :title %><br />
      <%= f.text_field :title, maxlength:'255', size: '50', class: 'form-control', type: 'text' %>
    </div>

    <div class="form-group review_review_field">
      <%= f.label :review %>
      <%= f.text_area :review, wrap:'virtual', rows: '10', cols: '50', class: 'form-control', type: 'text' %>
    </div>

    <div class="review_submit">
      <%= f.submit Spree.t(:submit_your_review), class: 'btn btn-default' %>
    </div>
<% end %>
