<%= Spree.t('shipment_mailer.shipped_email.dear_customer') %>

<%= Spree.t('shipment_mailer.shipped_email.instructions') %>
============================================================
<%= Spree.t('shipment_mailer.shipped_email.order_summary') %>
============================================================
Kundennummer: <%= "#{@shipment.order.user.try(:id) || 'A'}/#{@shipment.order.user.ship_address_id}/#{@shipment.order.user.bill_address_id}" %>
Bestellnummer: <%= @shipment.order.number %>
Zahlart: <% @shipment.order.payments.valid.each do |payment| %><%= payment.payment_method.name %><% end %>
Versand: Spedition
Lieferung an:
  <% sa = @shipment.order.ship_address %>
  <%= sa.firstname %> <%= sa.lastname %>
  <%= sa.address1 %>
  <%= sa.address2 %>
  <%= sa.zipcode %> <%= sa.city %>
  <%= sa.phone %>

Rechnung an:
  <% ba = @shipment.order.bill_address %>
  <%= ba.firstname %> <%= sa.lastname %>
  <%= ba.address1 %>
  <%= ba.address2 %>
  <%= ba.zipcode %> <%= ba.city %>
  <%= ba.phone %>

============================================================
<%= Spree.t('shipment_mailer.shipped_email.shipment_summary') %>
============================================================
<% @shipment.manifest.each do |item| %>
    <%= raw(item.variant.product.name) %> <%= raw(item.variant.options_text) -%> <%=item.quantity%> x <%= item.single_money %> = <%= item.display_amount %>
<% end %>
============================================================
Gesamtsumme <% if @shipment.order.all_adjustments.eligible.tax.exists? %>(inkl. <% @shipment.order.all_adjustments.eligible.tax.group_by(&:label).each do |label, adjustments| %><%= Spree::Money.new(adjustments.sum(&:amount), currency: @shipment.order.currency) %> <%= label %><% end %>)<%end %> <%= @shipment.order.display_total %>

<%= Spree.t('shipment_mailer.shipped_email.track_information', :tracking => @shipment.tracking)     if @shipment.tracking %>
<%= Spree.t('shipment_mailer.shipped_email.track_link',        :url      => @shipment.tracking_url) if @shipment.tracking_url %>

<%= Spree.t('shipment_mailer.shipped_email.thanks') %>

